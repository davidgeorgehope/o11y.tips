{
  "name": "o11y-tips-content-engine",
  "version": "1.0.0",
  "description": "Multi-niche automated content engine for discovering pain points and generating educational content",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && npm run build:admin",
    "build:admin": "cd admin && npm run build",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.50.0",
    "@google/genai": "^1.0.0",
    "@hono/node-server": "^1.13.0",
    "better-sqlite3": "^11.0.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.40.0",
    "esbuild": "^0.24.0",
    "hono": "^4.0.0",
    "jose": "^5.0.0",
    "marked": "^15.0.0",
    "node-cron": "^3.0.0",
    "uuid": "^11.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.0.0",
    "@types/node": "^22.0.0",
    "@types/node-cron": "^3.0.0",
    "@types/uuid": "^10.0.0",
    "drizzle-kit": "^0.30.0",
    "tsx": "^4.0.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
